						float left
					.derecha
						float right
						clearfix()
						.naranjita
							height 127px
							float left
							width 10px
							margin-bottom: 0
							margin-right: 4px
						.nombre
							max-width rem(403)
							float left
							h1
								font-size: rem(38)
								margin 8px 0 8px 35px
								text-align: left
						.subtitulo
							font-size: rem(22)
							padding-top: 5px
	footer
		&.medium
			clearfix()
			.izquierda
				float left
				text-align: left
			.derecha
				float right
				ul
					li
						display inline-block
						vertical-align: middle
						&:first-child
						&:nth-child(2)
							margin-right: 1.5rem
						
					
@media screen and (min-width:1000px)
	.wrap
		max-width rem(940)
		margin-left: auto
		margin-right: auto
	nav
		&.large
			text-align center
			width auto
			button
				display none
			ul
				background-color: transparent
				display block !important
				left 0
				opacity 1
				padding 0
				position relative
				top 0
				li
					alinear()
					border-bottom 0
					box-sizing: border-box
					margin 0 2.5rem
					padding 0
					transition all .3s ease-out
					a
						&:link
						&:visited
							color white
							display block
							font-family: OSansLight
							font-size: rem(22)
							padding 1rem
							text-transform: capitalize
					&:hover
						background-color: naranja
	.slide
		&.large
			background-color: #c1cbe0
	.seleccion
		&.large
			.especial
				clearfix()
				max-width rem(826)
				margin-left: auto
				margin-right: auto
				.izquierda
					float left
					.contenido
						max-width rem(374)
						text-align: left
				.derecha
					float right
					.contenido
						max-width rem(397)
						text-align: left
					.imagen
						margin-top: 2rem
	.uno
		&.large
			.especial
				clearfix()
				max-width rem(667)
				margin-left: auto
				margin-right: auto
			p
				max-width rem(815)
				margin-left: auto
				margin-right: auto
				font-size: 14px
			.izquierda
				float left
				max-width rem(314)
			.derecha
				float right
				max-width rem(314)
	.dos
		&.large
			.texto
				max-width rem(530)
				margin-left: auto
				margin-right: auto
				font-size: 14px
	.tres
		&.large
			.portafolio
				max-width rem(521)
				margin-left: auto
				margin-right: auto
				font-family: OSansReg
	.cuatro
		&.large
			.alianzas
				max-width rem(540)
				margin-left: auto
				margin-right: auto
				font-size: 14px
	.marcas
		&.large
			ul
				li
					&:first-child
					&:nth-child(2)
						margin-right: rem(140)
	.fundadora
		&.large
			.skills
				ul
					max-width rem(630)
					margin-left: auto
					margin-right: auto


	
			
			
