				float right
	.seleccion
		&.medium
			p
				max-width rem(537)
				margin-left: auto
				margin-right: auto
				&.contenido
					max-width rem(534)
					text-align: center
	.proveedor
		&.medium
			.especial
				max-width rem(626)
				margin-left: auto
				margin-right: auto
				clearfix()
				.texto
